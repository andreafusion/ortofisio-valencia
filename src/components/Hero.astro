---
import { site } from '../data/site';
import { testimonials } from '../data/testimonials';
---

<section class="hero" aria-label="Presentación">

  <div class="hero__bg">
    <img
      src={site.hero.image}
      alt={site.hero.imageAlt}
      width="1600"
      height="900"
      loading="eager"
      fetchpriority="high"
    />
  </div>

  <div class="hero__overlay" aria-hidden="true"></div>

  <div class="hero__body container">
    <div class="hero__content">

      <div class="hero__badge">
        <span class="hero__stars" aria-label="5 estrellas">★★★★★</span>
        <span>{site.hero.clientCount}</span>
      </div>

      <h1 class="hero__title" set:html={site.hero.title} />
      <p class="hero__subtitle">{site.hero.subtitle}</p>

      <div class="hero__actions">
        
          <a href={site.whatsapp}
          class="btn btn--hero-primary"
          target="_blank"
          rel="noopener noreferrer"
        >
          {site.hero.ctaPrimary}
        </a>
        
          <a href={site.bookingUrl}
          class="btn btn--hero-secondary"
          target="_blank"
          rel="noopener noreferrer"
        >
          {site.hero.ctaSecondary}
        </a>
      </div>

    </div>
  </div>

  <div class="hero__proof" aria-label="Testimonios destacados">
    <div class="container hero__proof-inner">
      {testimonials.slice(0, 2).map(t => (
        <figure class="hero__proof-item">
          <blockquote>"{t.quote}"</blockquote>
          <figcaption>— {t.author}</figcaption>
        </figure>
      ))}
    </div>
  </div>

</section>