---
import { services } from '../data/services';
import { site } from '../data/site';
---

<section id="servicios" class="services section" aria-labelledby="services-heading">
  <div class="container">
    <h2 id="services-heading" class="section__title">Servicios</h2>

    <ul class="services__grid" role="list">
      {services.filter(s => s.featured).map(s => (
        <li class="service-card">
          <img src={s.image} alt={s.name} width="400" height="220" loading="lazy" />
          <div class="service-card__body">
            <h3 class="service-card__name">{s.name}</h3>
            <p class="service-card__desc">{s.description}</p>
            <p class="service-card__meta">
              Desde <strong>{s.priceFrom}€</strong>
              &nbsp;·&nbsp;
              <span>{s.duration}</span>
            </p>
            <a href={site.bookingUrl} class="btn btn--primary btn--sm">Reservar</a>
          </div>
        </li>
      ))}
    </ul>

    <p class="services__note">
      <a href="/servicios">➡️ Ver lista completa de servicios</a>
    </p>
  </div>
</section>